#!/bin/bash

# debug install

# atom.list
while read -r p; do
    echo "$p"
    apt install -y "$p" 
    echo
done <atom.list

# base.list
while read -r p; do
    echo "$p"
    apt install -y "$p" 
    echo
done <base.list

# baseNoInstallRec.list
while read -r p; do
    echo "$p"
    apt install -y --no-install-recommends "$p" 
    echo
done <baseNoInstallRec.list
