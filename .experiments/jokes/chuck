#!/bin/bash
 
data="chuck-norris-jokes.txt"

[[ -f "$data" ]] || { echo "Chuck database not found." && exit 1 ;}

c="0"
unlock="60" 
 
until

    seen 250 chuck "$(shuf -n 1 $data)" 2>/dev/null

    do 
        # lock prevention
        (( c++ ))
        if (( c == unlock )); then 
             >&2 echo "lock prevented"
            exit
        fi
    done
    
# in .zshrc
# Chuck
#( cd ~/source/stretchbang/.experiments/jokes && cowsay "$(./chuck)" )
