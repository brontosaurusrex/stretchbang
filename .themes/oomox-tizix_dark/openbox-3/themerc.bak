# Menu
menu.border.color: #dcdcdc

menu.title.bg: Solid Flat
menu.title.bg.color: #1d2324
menu.title.bg.shadow: 0
menu.title.text.color: #dcdcdc
menu.title.text.justify: Center

menu.items.bg: Solid Flat
menu.items.bg.color: #1d2324
menu.items.text.color: #dcdcdc
menu.items.disabled.text.color: #acadae

menu.items.active.bg: Solid Flat
menu.items.active.bg.color: #126d7a
menu.items.active.text.color: #dcdcdc

menu.separator.color: #acadae
menu.separator.width: 1
menu.separator.padding.width: 2
menu.separator.padding.height: 4

# Window focused
window.active.title.separator.color: #1d2324

# Active window
window.active.border.color: #126d7a


window.active.title.bg: flat solid
window.active.title.bg.color: #1d2324
window.active.title.separator.color: #1d2324
window.active.text.justify: center

window.active.label.bg: parentrelative
window.active.label.text.color: #dcdcdc

window.active.handle.bg: flat solid
window.active.handle.bg.color: #1d2324

window.active.grip.bg: flat solid
window.active.grip.bg.color: #1d2324

window.active.button.unpressed.bg: flat solid
window.active.button.unpressed.bg.color: #1d2324
window.active.button.unpressed.image.color: #dcdcdc

window.active.button.pressed.bg: flat solid
window.active.button.pressed.bg.color: #126d7a
window.active.button.pressed.image.color: #f9f9f9

window.active.button.disabled.bg: flat solid
window.active.button.disabled.bg.color: #1d2324
window.active.button.disabled.image.color: #acadae

window.active.button.hover.bg: flat solid
window.active.button.hover.bg.color: #1d2324
window.active.button.hover.image.color: #126d7a

#window.active.button.toggled.bg: #126d7a
#window.active.button.toggled.image.color: #f9f9f9

# Inactive window
window.inactive.border.color: #1d2324

window.inactive.title.bg: flat solid
window.inactive.title.bg.color: #1d2324
window.inactive.title.separator.color: #1d2324
window.inactive.text.justify: center

window.inactive.label.bg: parentrelative
window.inactive.label.text.color: #acadae

window.inactive.handle.bg: flat solid
window.inactive.handle.bg.color: #1d2324

window.inactive.grip.bg: flat solid
window.inactive.grip.bg.color: #1d2324

window.inactive.button.unpressed.bg: flat solid
window.inactive.button.unpressed.bg.color: #1d2324
window.inactive.button.unpressed.image.color: #acadae

window.inactive.button.pressed.bg: flat solid
window.inactive.button.pressed.bg.color: #126d7a
window.inactive.button.pressed.image.color: #f9f9f9

window.inactive.button.disabled.bg: flat solid
window.inactive.button.disabled.bg.color: #acadae
window.inactive.button.disabled.image.color: #1d2324

window.inactive.button.hover.bg: flat solid
window.inactive.button.hover.bg.color: #1d2324
window.inactive.button.hover.image.color: #126d7a


# OSD
osd.border.width: 1
osd.border.color: #126d7a

osd.bg: flat solid
osd.bg.color: #1d2324
osd.label.bg: flat solid
osd.label.bg.color: #1d2324
osd.label.text.color: #dcdcdc

# OSD
osd.bg: Solid Flat
osd.bg.color: #1d2324
osd.bg.shadow: 0

osd.border.width: 2
osd.hilight.bg: Solid Flat
osd.hilight.bg.color: #126d7a
osd.unhilight.bg: flat solid
osd.unhilight.bg.color: #1d2324

osd.button.unpressed.bg: flat border
osd.button.unpressed.bg.color: #202728
#osd.button.unpressed.*.border.color: #dcdcdc

osd.button.pressed.bg: flat border
osd.button.pressed.bg.color: #126d7a
#osd.button.pressed.*.border.color: #f9f9f9

osd.button.focused.bg: flat solid border
osd.button.focused.bg.color: #dcdcdc
#osd.button.focused.*.border.color: #1d2324

osd.button.focused.box.color: #126d7a


# Fonts
window.active.label.text.font:shadow=n
window.inactive.label.text.font:shadow=n
menu.items.font:shadow=n
menu.title.text.font:shadow=n


# Everything else
border.width: 3
padding.width: 8
padding.height: 3
window.handle.width: 0
window.client.padding.width: 0
window.label.text.justify: center
#menu.overlap: 0


# mine
window.label.text.justify: left
