#!/bin/bash

# toggle compton and conky
# usually patched to meta+f12

        # compton
        pgrep -x compton
            if [ $? -eq 0 ]; then
                echo "kill compton"
                killall compton 
            else
                echo "start compton"
                compton &
            fi
        # conky
        pgrep -x conky
            if [ $? -eq 0 ]; then
                echo "kill conky"
                killall conky 
            else
                echo "start conky"
                conky > /dev/null 2>&1
            fi 
