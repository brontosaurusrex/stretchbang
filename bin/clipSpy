#!/bin/bash

# clipSpy

command -v xsel >/dev/null 2>&1 || { >&2 echo "I need xsel." ; exit 1; }

def=" C "
upd="---"
echo "$def"

update () {
    xsel -ob | head -50 >&2
}

update

clipSpy () {
    while :; do

        a=$(xsel -ob)
        sleep 2
        b=$(xsel -ob)
        
        if [ "$a" == "$b" ]; then  # Clipboard the same
            false
            
        else                       # Clipboard changed
            >&2 echo -en "\033[2J" # reset
            update   
            echo "$upd" && sleep 0.1 && echo "$def"
        fi
        
    done 
}

clipSpy


# in tint2 (>= 15.0)
