#!/bin/bash

# changeres
# reset wallpaper if screen-resolution change is detected and we are running
# under virtualbox, else just exit.
# var=$(command-name-here)

old=$(xrandr)

if grep hypervisor /proc/cpuinfo ; then # if cpu flags have hypervisor assume virtualbox

    while true ; do

        if diff <(echo "$old") <(xrandr); then
        
        
        
        echo "res was changed"
        
        
        fi

        old=$(xrandr)

        sleep 5

    done

else

    exit

fi



# ( nitrogen --restore && wbarRestart )
