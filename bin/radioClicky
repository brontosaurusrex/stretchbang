#!/bin/bash

radio="http://wfmu.org/wfmu.pls"

on="/"
off="\\"

pidPath="$HOME/tmp/radiopid"

mkdir -p "$HOME/tmp"

if [ "$1" == "toggle" ]; then

    if [ -f "$pidPath" ]; then
        Rpid=$(cat "$pidPath")
        kill "$Rpid" && rm "$pidPath"
        echo "$off" # off
    else
        mpv --no-video --no-resume-playback --no-ytdl --no-config  "$radio" &>/dev/null &
        Rpid="$!"
        echo "$Rpid" > "$pidPath"
        echo "$on" # on
    fi

else # status

    if [ -f "$pidPath" ]; then
        echo "$on" # on
    else
        echo "$off" # off
    fi

fi

## tint2rc executor
