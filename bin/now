#!/bin/bash

# on tv now
# usage examples: 
# now "HBO"
# now "HBO Comedy"
# now "HBO 3"
# now "National"
# now "Discovery"

guidegit="$HOME/source/autoepg"
guide="$guidegit/guide.xml"

cd "$guidegit" || exit
git pull > /dev/null

tv_grep --channel-name "$1" --on-after now "$guide" | tv_to_text | head -12
