set guioptions ""
set recolor true

#set recolor-darkcolor "#93A1A1"
#set recolor-darkcolor "#74998B"
set recolor-darkcolor "#86A1A7"
#set recolor-lightcolor "#002B36"
set recolor-lightcolor "#333D4D"

# give me icon
set window-icon ~/.icons/Papirus-GTK/48x48/mimetypes/application-pdf.svg

# colors
#set statusbar-bg "#002B36"
#set statusbar-fg "#93A1A1"
#set default-fg "#93A1A1"
#set default-bg "#002B36"

# keybindings
#map [fullscreen] a adjust_window best-fit
#map [fullscreen] s adjust_window width
#map [fullscreen] f follow
#map [fullscreen] <Tab> toggle_index
#map [fullscreen] j scroll down
#map [fullscreen] k scroll up
